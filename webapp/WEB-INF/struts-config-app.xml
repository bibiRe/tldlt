<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://struts.apache.org/dtds/struts-config_1_3.dtd">
<struts-config>
	<!-- 配置ActionFormBean -->
	<form-beans>
		<!-- 公共Form -->
		<form-bean name="baseActionForm" type="org.g4studio.common.web.BaseActionForm" />
	</form-beans>

	<!-- Action映射 -->
	<action-mappings type="org.g4studio.core.mvc.xstruts.action.ActionMapping">

		<!-- 设备类型 -->
		<action name="baseActionForm" path="/deviceType" scope="request"
			parameter="reqCode" type="com.sysware.tldlt.app.web.devicetype.DeviceTypeAction">
			<forward name="deviceTypeView" path="/devicetype/devicetypeview.jsp" />
		</action>
		<!-- 区域管理 -->
		<action name="baseActionForm" path="/region" scope="request"
			parameter="reqCode" type="com.sysware.tldlt.app.web.region.RegionAction">
			<forward name="regionView" path="/region/regionview.jsp" />
		</action>
		<!-- 设备厂家 -->
		<action name="baseActionForm" path="/deviceManufacture" scope="request"
			parameter="reqCode"
			type="com.sysware.tldlt.app.web.devicemanufacture.DeviceManufactureAction">
			<forward name="deviceManufactureView" path="/devicemanufacture/devicemanufactureview.jsp" />
		</action>
		<!-- 设备型号 -->
		<action name="baseActionForm" path="/deviceModel" scope="request"
			parameter="reqCode" type="com.sysware.tldlt.app.web.devicemodel.DeviceModelAction">
			<forward name="deviceModelView" path="/devicemodel/devicemodelview.jsp" />
		</action>
		<!-- 用户分组 -->
		<action name="baseActionForm" path="/userGroup" scope="request"
			parameter="reqCode" type="com.sysware.tldlt.app.web.usergroup.UserGroupAction">
			<forward name="UserGroupView" path="/usergroup/usergroupview.jsp" />
		</action>
		<!-- 设备管理 -->
		<action name="baseActionForm" path="/devMgr" scope="request"
			parameter="reqCode" type="com.sysware.tldlt.app.web.devmgr.DevMgrAction">
			<forward name="DevMgrView" path="/devmgr/devmgrview.jsp" />
		</action>
		<!-- 巡检计划 -->
		<action name="baseActionForm" path="/inspectionPlan" scope="request"
			parameter="reqCode"
			type="com.sysware.tldlt.app.web.inspectionplan.InspectionPlanAction">
			<forward name="InspectionPlanView" path="/inspectionplan/inspectionplanview.jsp" />
		</action>
		<!-- 巡检 -->
		<action name="baseActionForm" path="/inspectView" scope="request"
			parameter="reqCode"
			type="com.sysware.tldlt.app.web.inspect.InspectViewAction">
			<forward name="inspectRealView" path="/inspectview/inspectrealview.jsp" />
		</action>

	</action-mappings>

</struts-config>